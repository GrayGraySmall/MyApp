<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/top_order_detail"
        android:layout_height="55dp"
        android:background="@color/lightBlue">
        <TextView
            android:text="订单详情"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="12dp"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/id_btn_order_back"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@color/touming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/top_order_detail"
        android:layout_marginTop="20dp"
        android:id="@+id/order_detail_second"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/order_name_layout">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓    名:"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_own_name"
            android:layout_marginLeft="50dp"
            android:textSize="25dp"
            android:text="杨辉"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/order_name_layout"
            android:id="@+id/order_license_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号:"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="25dp"
                android:id="@+id/order_own_license"
                android:text="GA233333"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/order_license_layout"
            android:id="@+id/order_gasquality_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="油    品:"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_own_gasquality"
                android:layout_marginLeft="50dp"
                android:textSize="25dp"
                android:text="上等好油"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/order_gasquality_layout"
            android:layout_marginTop="10dp"
            android:id="@+id/order_gasquantity_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="油    量:"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_own_gasquantity"
                android:layout_marginLeft="50dp"
                android:textSize="25dp"
                android:text="15L"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/order_gasquantity_layout"
            android:id="@+id/order_gasprice_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="油    价:"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_own_gasprice"
                android:layout_marginLeft="50dp"
                android:textSize="25dp"
                android:text="$10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/order_gasprice_layout"
            android:id="@+id/order_time_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="时    间:"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_own_time"

                android:layout_marginLeft="50dp"
                android:textSize="25dp"
                android:text="2015-8-27"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/order_time_layout"
            android:id="@+id/order_paystate_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付状态:"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_own_paystate"
                android:layout_marginLeft="50dp"
                android:textSize="25dp"
                android:text="未支付"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/order_paystate_layout"
            android:id="@+id/order_gasstation_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加油站位置:"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_own_gasstation"
                android:layout_marginLeft="30dp"
                android:textSize="25dp"
                android:text="万达附近加油站"
                />
        </LinearLayout>
    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_detail_code"
        android:layout_below="@+id/order_detail_second"
        android:text="生成二维码"
        android:layout_marginTop="10dp"
        android:shadowColor="@color/lightBlue"
        android:textSize="25dp"
        android:textColor="@color/white"
        />
</RelativeLayout>
