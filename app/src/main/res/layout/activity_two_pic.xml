<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/tops"
        android:layout_height="55dp"
        android:background="@color/lightBlue">
        <TextView
            android:text="二维码"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="12dp"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@color/lightyellow"
        android:layout_height="370dp"
        android:layout_below="@+id/tops">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/touxiang"
        android:background="@color/backgroundGray"
        android:id="@+id/pic_scan_order"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_below="@+id/pic_scan_order"
        android:text="扫描二维码完成订单"/></RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="保存到手机"
        android:textColor="@color/lightBlue"
        android:background="@color/backgroundGray"
        android:layout_marginLeft="60dp"
        android:id="@+id/order_btn_save"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_two_pic_back_button"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:background="@color/backgroundGray"
        android:textColor="@color/lightBlue"
        android:text="返回"/></LinearLayout>
</LinearLayout>
