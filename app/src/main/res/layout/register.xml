<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:text="姓名"
            android:textSize="15sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/id_text_reg_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:text="账号      "
            android:textSize="15sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/id_text_reg_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:text="密码      "
            android:textSize="15sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/id_text_reg_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:password="true"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:text="确认密码"
            android:textSize="15sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/id_text_reg_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:password="true"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:text="手机号"
            android:textSize="15sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/id_text_reg_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/id_btn_reg_register"
            android:layout_width="wrap_content"
            android:text="注册"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/id_btn_reg_cancel"
            android:layout_width="wrap_content"
            android:text="返回"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
